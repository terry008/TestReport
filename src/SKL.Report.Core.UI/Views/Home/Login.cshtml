@{
    Layout=null;
}
@model StudentLoginModel

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0,user-scalable=no" id="viewport" />
    <title>@ViewData["title"] - 思考乐测评分析报告平台
    </title>
    <link href="https://cdn.bootcss.com/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/index.css" rel="stylesheet" />
    
</head>
<body>
    <form asp-controller="Home" asp-action="Login" method="post">
        <div class="container">
            <div id="logo_nav" class="row">
                <div class="col-md-6" style="text-align: center">
                    <img src="/images/logo.png" alt="logo" />
                </div>
                <div id="nav" class="col-md-6 hidden-sm hidden-xs">
                    <a href="https://www.skledu.com" target="_blank">思考乐官网</a>
                    <a href="https://static.skledu.com/web2019/intro/index.html" target="_blank">思考乐升学</a>
                    <a href="https://static.skledu.com/web2019/lexue/index.html" target="_blank">思考乐乐学</a>
                    <a href="https://wk.skledu.com/index" target="_blank">升学100</a>
                </div>
            </div>
        </div>
        <div style="width:100%;" id="bg_color">
            <div class="container">
                <div class="row">
                    <div id="bg_img" class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                        <div class="col-md-4 col-md-offset-8">
                            <div id="search">
                                <div id="title">
                                    @ViewData["title"]
                                </div>
                                <div class="shuru">
                                    <input type="text" asp-for="StuName" class="input-lg form-control" placeholder="学生姓名" />
                                </div>
                                <div class="shuru">
                                    <input type="text" asp-for="Phone" class="form-control input-lg" placeholder="手机号" />
                                </div>
                                <div class="shuru">
                                    <button type="submit" class="btn btn-info btn-block" >查 询 报 告</button>
                                </div>
                                <div id="msg">
                                    <span id="r1" style="display: none; color: red;">学员姓名不能为空！</span><br />
                                    <span id="r2" style="display: none; color: red;">家长手机号不能为空！</span><br />
                                    <span id="r3" style="display: none; color: red;">手机号格式错误！</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div id="bottom_nav">
            <p>
                深圳市思考乐文化发展有限公司&nbsp;&nbsp;Copyright &copy; 2020&nbsp;&nbsp;All Rights Reseved 
            </p>
            <p>
                <a href="http://www.miitbeian.gov.cn/state/outPortal/loginPortal.action;jsessionid=ycnYTnYSBBFmTDqlrJTYNCc16sCRf2jJ8xYdpYvKL1bsRLPpsph5!-1893564368;"
                    target="_blank">粤ICP备 10062464号</a>
                <p>思考乐教育信息中心技术支持</p>
            </p>
            <script src="https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js"></script>
            <script src="https://cdn.bootcss.com/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
            <script src="https://cdn.bootcss.com/layer/2.3/layer.js"></script>
            <script>
                var validation = function () {
                    $('#msg span').hide();
                    if ($("#txt_name").val() == "") {
                        $("#r1").show();
                        return false;
                    };
                    var reg = /^1\d{10}$/;
                    if ($("#txt_phone").val() == "") {
                        $("#r2").show();
                        return false;
                    };
                    if (reg.test($('#txt_phone').val()) == false) {
                        $("#r3").show();
                        return false;
                    }
                    return true;
                };
            </script>
        </div>
    </form>
</body>
</html>